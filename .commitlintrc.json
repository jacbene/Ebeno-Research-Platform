{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "chore",
        "perf",
        "ci",
        "revert",
        "build"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "auth",
        "projects",
        "transcription",
        "ia",
        "coding",
        "bibliography",
        "ui",
        "api",
        "database",
        "config",
        "deps",
        "devops",
        "security",
        "performance",
        "i18n",
        "pwa"
      ]
    ],
    "subject-case": [2, "always", "sentence-case"],
    "header-max-length": [2, "always", 100]
  }
}
